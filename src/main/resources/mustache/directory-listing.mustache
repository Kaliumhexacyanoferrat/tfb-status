{{<layout}}

{{!
--------------------------------------------------------------------------------
The HTML of the directory listing page.
--------------------------------------------------------------------------------
}}

{{$styles}}
<link rel="stylesheet" href="/assets/css/directory-listing.css">
{{/styles}}

{{$body}}

<h4>{{#parents}}{{#isSelected}}{{fileName}}{{/isSelected}}{{^isSelected}}<a href="/unzip/{{fullPath}}">{{fileName}}</a>{{/isSelected}}/{{/parents}}</h4>

{{#children}}
<div class="file">
  <a class="fileName"
     href="/unzip/{{fullPath}}">{{fileName}}{{#isDirectory}}/{{/isDirectory}}</a>
  <div class="fileSize">
    {{#size}}{{size}}{{/size}}
    {{^size}}-{{/size}}
  </div>
</div>
{{/children}}

{{/body}}

{{/layout}}
